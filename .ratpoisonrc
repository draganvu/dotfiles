# launch polybar
exec /home/dragan/.ratbar/bar.sh

# set ratpoison escape key
escape C-z

# set appearance
set font "Dejavu Sans Mono-10"
set border 0
set padding 0 18 0 0
set winname class

# 7 seconds for messages
msgwait 7

# keybindings for some programs
bind c exec urxvt
bind e exec emacs
bind f exec firefox
bind o exec thunar

# personal keybindings
bind h hsplit
bind q only
